public class Solution {
    // DO NOT MODIFY THE ARGUMENTS WITH "final" PREFIX. IT IS READ ONLY
    public int lengthOfLastWord(final String A) {
        int k = A.length();
        String x= A.trim();
        int sum = 0 ;
        for(int i=0 ; i < k ; i++){
            if(x.charAt(k-1-i) == ' ')
             sum =+ i-1 ;
             break ;
            
        }
        return k ;
    }
}
